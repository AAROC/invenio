## read config variables:
#include "config.wml"
#include "configbis.wml"
#include "cdswmllib.wml"

## start shell:
<protect>#!/bin/sh
<protect>## Do not edit this file -- it was generated from CDSware WML sources.  Edit those instead.</protect>

## fill config variables:
DBHOST=<DBHOST>
DBNAME=<DBNAME>
DBUSER=<DBUSER>
DBPASS=<DBPASS>

###### okay, config file read, the script can continue ######

# is help called?
if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    echo "Usage: $0"
    echo "General options:"
    echo " -h, --help            Print this help."
    echo " -V, --version         Print version information."
    exit 0
fi 

# is version called?
if [ "$1" = "-V" ] || [ "$1" = "--version" ]; then
    echo "<: print generate_pretty_version_string('$Id$'); :>"
    exit 0
fi 
 
## okay, call MySQL client:
<MYSQL> -B --host=$DBHOST --user=$DBUSER --password=$DBPASS $DBNAME
