warranty; not even for MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.""" % version
    
def main():
    global DEBUGLEVEL

    try:
        opts, args = getopt.getopt(sys.argv[1:], "hv", ["help", "version"])
    except getopt.GetoptError:
        usage()
        sys.exit(2)

    for o, a in opts:
        if o in ("-h", "--help"):
            usage()
            sys.exit()
        if o in ("-v", "--version"):
            print_version()
            sys.exit()

    
    run_alerts()

if __name__ == "__main__":
    t0 = time()
    main()	
    t1 = time()
    dt = t1 - t0
    print 'Alert engine finished in %s seconds' % dt
