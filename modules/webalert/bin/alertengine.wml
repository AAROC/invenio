DEBUGLEVEL = 0

def usage():
    print """Usage: alertengine [OPTION]
Run the alert engine.\n
  -h, --help          display this help and exit
  -v, --version       output version information and exit\n
Report bugs to <%s>""" % supportemail
    
def print_version():
